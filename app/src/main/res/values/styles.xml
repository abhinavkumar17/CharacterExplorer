<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Button">
        <item name="android:textSize">@dimen/text_size_secondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingTop">@dimen/padding_internal_bigger</item>
        <item name="android:paddingBottom">@dimen/padding_internal_bigger</item>
        <item name="android:paddingLeft">@dimen/padding_internal_bigger</item>
        <item name="android:paddingRight">@dimen/padding_internal_bigger</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextDesc">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingTop">@dimen/padding_internal_bigger</item>
        <item name="android:paddingLeft">@dimen/padding_internal_bigger</item>
        <item name="android:paddingRight">@dimen/padding_internal_bigger</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:paddingBottom">@dimen/padding_internal_bigger</item>
        <item name="android:textSize">@dimen/text_size_secondary</item>
    </style>

    <style name="TextTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/padding_internal_bigger</item>
        <item name="android:paddingLeft">@dimen/padding_internal_bigger</item>
        <item name="android:paddingRight">@dimen/padding_internal_bigger</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:paddingBottom">@dimen/padding_internal_bigger</item>
        <item name="android:textSize">@dimen/text_size_primary</item>
    </style>

    <style name="MatchParentLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="SectionLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapContentLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
